{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
    "lib": ["ES2023", "DOM"],
    "sourceMap": true,
    "outDir": "./dist/tsc",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true
  }
}
